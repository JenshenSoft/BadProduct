<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AdditiveDetailsActivity">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="popupTheme">@style/Theme.AppCompat.NoActionBar</item>
    </style>

    <style name="TextViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
